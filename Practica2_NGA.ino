void loop() {
  Blynk.run();
  timer.run();

  //Número de control
  int numeroControl = random(0, 3);

  //Cadenas
  char cadenaTemperatura[8];  //°C
  char cadenaHumedad[5];      //%

  //Valores del sensor
  int temperatura = (int) sht20.readTemperature();
  int humedad = (int) sht20.readHumidity();

  //Se generan las cadenas con el valor y el símbolo
  snprintf(cadenaTemperatura, 8, "%d  C", temperatura);
  snprintf(cadenaHumedad, 5, "%d%%", humedad);

  display.setTextColor(SSD1306_WHITE);


  if (contadorSegundos < 5) {
    display.clearDisplay();
    //Se muestra la temperatura y la humedad

    if (numeroControl == 0) {
      display.drawBitmap(0, 0, gota_bajo, SCREEN_WIDTH, SCREEN_HEIGHT, 1);
      display.drawBitmap(64, 0, termometro_bajo, SCREEN_WIDTH, SCREEN_HEIGHT, 1);
    } else if (numeroControl == 1) {
      display.drawBitmap(0, 0, gota_medio, SCREEN_WIDTH, SCREEN_HEIGHT, 1);
      display.drawBitmap(64, 0, termometro_medio, SCREEN_WIDTH, SCREEN_HEIGHT, 1);
    } else {
      display.drawBitmap(0, 0, gota_alto, SCREEN_WIDTH, SCREEN_HEIGHT, 1);
      display.drawBitmap(64, 0, termometro_alto, SCREEN_WIDTH, SCREEN_HEIGHT, 1);
    }
    //display.setTextSize(1);
    //Se imprime la humedad
    display.setCursor(31, 10);
    display.println("Humedad");
    display.setCursor(40, 19);
    display.println(cadenaHumedad);
    //Se imprime la temperatura
    display.setCursor(92, 10);
    display.print("Temp.");
    display.setCursor(95, 19);
    display.print(cadenaTemperatura);
    display.drawCircle(114, 21, 2, WHITE);

  } else if (contadorSegundos >= 4) {
    display.clearDisplay();
    printLocalTime();
  }

  Blynk.virtualWrite(V0, temperatura);
  Blynk.virtualWrite(V2, humedad);


  dibujarLineaTiempo();

  display.display();
  delay(1000);
  cambiarContadorSegundos();
}